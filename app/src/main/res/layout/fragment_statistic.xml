<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView style="@style/Title"
                android:id="@+id/day"
                android:text="통계"/>

            <LinearLayout style="@style/CustomBox"
                android:orientation="vertical">
                <TextView style="@style/subTitle"
                    android:text="수면의 질"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/quality_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="평균"/>
                        <TextView style="@style/CustomText"
                            android:text="72%"/>
                    </LinearLayout>

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="최고"/>
                        <TextView style="@style/CustomText"
                            android:text="96%"/>
                    </LinearLayout>

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="최악"/>
                        <TextView style="@style/CustomText"
                            android:text="50%"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/CustomBox"
                android:orientation="vertical">
                <TextView style="@style/subTitle"
                    android:text="수면 시간"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/time_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="평균"/>
                        <TextView style="@style/CustomText"
                            android:text="6:59"/>
                    </LinearLayout>

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="최고"/>
                        <TextView style="@style/CustomText"
                            android:text="8:18"/>
                    </LinearLayout>

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="최악"/>
                        <TextView style="@style/CustomText"
                            android:text="5:18"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout style="@style/CustomBox"
                android:orientation="vertical">
                <TextView style="@style/subTitle"
                    android:text="취침 시간"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/gotobed_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="평균"/>
                        <TextView style="@style/CustomText"
                            android:text="22:34"/>
                    </LinearLayout>

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="가장 최근"/>
                        <TextView style="@style/CustomText"
                            android:text="23:30"/>
                    </LinearLayout>

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="가장 오래 전"/>
                        <TextView style="@style/CustomText"
                            android:text="21:30"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout style="@style/CustomBox"
                android:orientation="vertical">
                <TextView style="@style/subTitle"
                    android:text="기상 시간"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/wakeup_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="평균"/>
                        <TextView style="@style/CustomText"
                            android:text="7:47"/>
                    </LinearLayout>

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="가장 최근"/>
                        <TextView style="@style/CustomText"
                            android:text="7:23"/>
                    </LinearLayout>

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="가장 오래 전"/>
                        <TextView style="@style/CustomText"
                            android:text="7:59"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout style="@style/CustomBox"
                android:orientation="vertical">
                <TextView style="@style/subTitle"
                    android:text="잠꼬대"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/talking_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="평균"/>
                        <TextView style="@style/CustomText"
                            android:text="19분"/>
                    </LinearLayout>

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="가장 최근"/>
                        <TextView style="@style/CustomText"
                            android:text="5분"/>
                    </LinearLayout>

                    <LinearLayout style="@style/CustomSubBox">
                        <TextView style="@style/subText"
                            android:text="가장 오래 전"/>
                        <TextView style="@style/CustomText"
                            android:text="19분"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
